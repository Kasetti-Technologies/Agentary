{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    
    // --- CRITICAL ADDITIONS TO RESOLVE ERRORS ---
    // 1. Enables importing JSON files (Fixes Error 2732)
    "resolveJsonModule": true, 
    
    // 2. Tells TS where the source code lives and enforces strictness
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./"
  },
  
  // 3. Tells TS to compile everything inside the 'src' directory
  "include": ["src/**/*"], 
  "exclude": ["node_modules"]
}
